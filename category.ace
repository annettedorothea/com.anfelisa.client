HttpClient

category

ACE

LoadCategoryTree ( rootCategoryId, selectedCategoryId )
	fromAppState (common.authorView.categoryTree.rootCategory)
	call com.anfelisa.category.GetCategoryTree
	loadingFlag common.displaySpinner 
	on ok ( 
		set common.authorView
	) triggers (card.LoadCards)

ExpandTreeItem ( categoryId  )
	fromAppState (common.authorView.categoryTree.rootCategory)
	on ok (set common.authorView.categoryTree.rootCategory)

CollapseTreeItem ( categoryId )
	fromAppState (
		common.authorView.categoryTree.rootCategory,
		common.authorView.categoryTree.selectedCategory
	)
	on ok (
		set common.authorView.categoryTree.rootCategory
	)
	on selectParentCategory (
		set common.authorView.categoryTree.rootCategory 
	) triggers( SelectTreeItem )

SelectTreeItem ( categoryId  )
	fromAppState (common.authorView.categoryTree.rootCategory)
	on ok ( set common.authorView.categoryTree.selectedCategory) triggers( card.LoadCards common.Route)

NewCategoryClick
	on ok (merge common.authorView.categoryTree)
	
CancelNewCategory
	on ok (merge common.authorView.categoryTree)
	
CategoryNameChanged ( categoryName )
	on ok (merge common.authorView.categoryTree)
	
CreateCategory
	fromAppState (
		common.authorView.categoryTree.categoryName,
		common.authorView.categoryTree.selectedCategory.categoryId as parentCategoryId,
		common.authorView.categoryTree.rootCategory.categoryId as rootCategoryId
	)
	call com.anfelisa.category.CreateCategory
	loadingFlag common.displaySpinner 
	on ok (merge common.authorView.categoryTree) triggers (LoadCategoryTree )
	on error (merge common.authorView.categoryTree)

DeleteCategoryClick
	on ok (merge common.authorView.categoryTree)
	
CancelDeleteCategory
	on ok (merge common.authorView.categoryTree)

DeleteCategory
	fromAppState (
		common.authorView.categoryTree.selectedCategory.categoryId,
		common.authorView.categoryTree.selectedCategory.parentCategoryId as selectedCategoryId,
		common.authorView.categoryTree.rootCategory.categoryId as rootCategoryId
	)
	call com.anfelisa.category.DeleteCategory
	loadingFlag common.displaySpinner 
	on ok (merge common.authorView.categoryTree) triggers (LoadCategoryTree)
	on error (merge common.authorView.categoryTree)

EditCategoryClick
	fromAppState (common.authorView.categoryTree.selectedCategory.categoryName)
	on ok (merge common.authorView.categoryTree)
	
CancelEditCategory
	on ok (merge common.authorView.categoryTree)
	
UpdateCategory
	fromAppState (
		common.authorView.categoryTree.rootCategory.categoryId as rootCategoryId,
		common.authorView.categoryTree.selectedCategory.categoryId as selectedCategoryId,
		common.authorView.categoryTree.selectedCategory.categoryId,
		common.authorView.categoryTree.categoryName
	)
	call com.anfelisa.category.UpdateCategory
	loadingFlag common.displaySpinner 
	on ok (merge common.authorView.categoryTree) triggers (LoadCategoryTree)
	on error (merge common.authorView.categoryTree)

CheckDropAllowed ( categoryId, altKey, depth )
	fromAppState (
		common.authorView.categoryTree.rootCategory,
		common.authorView.categoryTree.movedCategory,
		common.authorView.categoryTree.selectedCategory
	)
	on ok (merge common.authorView.categoryTree)

ItemDropped
	fromAppState (common.authorView.categoryTree.movedCategory)
	on card triggers (card.MoveCards)
	on category triggers (MoveCategory)

MoveCategoryStarted ( movedCategoryId )
	fromAppState(common.authorView.categoryTree.rootCategory)
	on ok (merge common.authorView.categoryTree)
	
MoveCategory
	fromAppState (
		common.authorView.categoryTree.rootCategory.categoryId as rootCategoryId,
		common.authorView.categoryTree.dropTargetCategoryId as selectedCategoryId,
		common.authorView.categoryTree.dropTargetCategoryId as targetCategoryId,
		common.authorView.categoryTree.movedCategory.categoryId as movedCategoryId
	)
 	call com.anfelisa.category.MoveCategory
	loadingFlag common.displaySpinner 
	on ok ( 
		reset common.authorView.categoryTree.movedCategory
	) triggers (category.LoadCategoryTree)

ChangeOrderCategory
	fromAppState (
		common.authorView.categoryTree.rootCategory.categoryId as rootCategoryId,
		common.authorView.categoryTree.movedCategory.categoryId as selectedCategoryId,
		common.authorView.categoryTree.dropTargetCategoryId as targetCategoryId,
		common.authorView.categoryTree.movedCategory.categoryId as movedCategoryId
	)
 	call com.anfelisa.category.ChangeOrderCategory
	loadingFlag common.displaySpinner 
	on ok ( 
		reset common.authorView.categoryTree.movedCategory
	) triggers (category.LoadCategoryTree)

PreviewCsv ( csv )
	on ok (
		set common.authorView.categoryTree.previewCsv
	) 
	
CancelPreviewCsv
	on ok (reset common.authorView.categoryTree.previewCsv)
		
SwapPreviewCsv
	fromAppState (common.authorView.categoryTree.previewCsv)
	on ok (set common.authorView.categoryTree.previewCsv)
	
ImportCsv
	fromAppState (
		common.authorView.categoryTree.rootCategory.categoryId as rootCategoryId,
		common.authorView.categoryTree.movedCategory.categoryId as selectedCategoryId,
		common.authorView.categoryTree.previewCsv,
		common.authorView.categoryTree.selectedCategory.categoryId
	)
	call com.anfelisa.card.ImportCsv
	loadingFlag common.displaySpinner 
	on ok ( 
		reset common.authorView.categoryTree.previewCsv
	) triggers (card.LoadCards)
	
		

